// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  password String
  // cart
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  // tags
  // cart
}

model Tags {
  id        Int      @id @default(autoincrement())
  name      String
  // products
}

model Cart {
  id        Int      @id @default(autoincrement())
  // owner
  // products
}